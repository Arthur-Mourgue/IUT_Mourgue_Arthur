<Window x:Class="InterfaceRobot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceRobot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="Emission" Header="Emission" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Margin="10,0,10,5">
            <TextBox x:Name="emissionTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AcceptsReturn="True" KeyUp="emissionTextBox_KeyUp"/>
        </GroupBox>

        <GroupBox x:Name="Reception" Header="Reception" HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Column="5" Grid.Row="1" Margin="10,0" Grid.ColumnSpan="3" Height="170">
            <TextBox x:Name="receptionTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="True" TextWrapping="Wrap"/>
        </GroupBox>
        <Button x:Name="buttonEnvoyer" Content="Envoi" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Click="buttonEnvoyer_Click" Margin="10,170,0,0" Grid.RowSpan="2" Grid.Column="1"/>
        <Button x:Name="buttonClear" Content="Clear" Grid.Column="3" HorizontalAlignment="Stretch" Grid.Row="1"  VerticalAlignment="Stretch" Click="buttonClear_Click" Margin="10,170,0,0" Grid.RowSpan="2"/>
        <Button x:Name="test" Content="Test" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="test_Click" Margin="10,170,0,0" Grid.Row="1" Height="25" Grid.Column="2" Grid.RowSpan="2"/>
        <GroupBox Grid.Column="1" Header="Leds" HorizontalAlignment="Left" Height="160" Margin="10,0,0,0" Grid.Row="5" VerticalAlignment="Top" Width="78" Grid.RowSpan="4"/>
        <CheckBox x:Name="Led_1" Grid.ColumnSpan="2" Content="Led 1 " HorizontalAlignment="Left" Margin="19,0,0,0" Grid.Row="6" VerticalAlignment="Top" Width="69" Height="49" IsEnabled="False"/>
        <CheckBox x:Name="Led_2" Grid.ColumnSpan="2" Content="Led 2 " HorizontalAlignment="Left" Margin="19,0,0,0" Grid.Row="7" VerticalAlignment="Top" Width="69" Height="49"/>
        <CheckBox x:Name="Led_3" Grid.ColumnSpan="2" Content="Led 3 " HorizontalAlignment="Left" Margin="19,0,0,0" Grid.Row="8" VerticalAlignment="Top" Width="69" Height="38"/>


        <GroupBox Grid.ColumnSpan="3" Grid.Column="3" Header="Telemtres IR" HorizontalAlignment="Left" Height="160" Grid.Row="5" Grid.RowSpan="4" VerticalAlignment="Top" Width="264">
            <TextBox HorizontalAlignment="Left" Height="117" Margin="0,10,-2,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="254"/>
        </GroupBox>

    </Grid>
</Window>
